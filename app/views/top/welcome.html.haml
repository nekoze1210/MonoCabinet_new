:css
  html {
    height: 100%;
    position: fixed;
  }
  .background {
    width: 100vw;
    height: 100vw;
    background: url('assets/lp-background.jpg') no-repeat;
    background-size: cover;
    position: relative;
    z-index: 0;
    overflow: hidden;
  }

  .background:before {
    content: '';
    background: inherit;
    background-color: rgba(0,0,0,0.5);
    -webkit-filter: blur(5px);
    -moz-filter: blur(5px);
    -o-filter: blur(5px);
    -ms-filter: blur(5px);
    filter: blur(5px);
    position: absolute;
    top: -5px;
    left: -5px;
    right: -5px;
    bottom: -5px;
    z-index: -1;
  }
  h1 {
    margin: 50px 0 0;
    color: #fff;
    text-shadow: 0 0 10px rgba(0,0,0,.4);
  }
  p.text-caption {
    margin: 50px 0;
    color: #fff;
    text-shadow: 0 0 10px rgba(0,0,0,.4);
  }
  .content {
    margin: 15% 0;
  }
