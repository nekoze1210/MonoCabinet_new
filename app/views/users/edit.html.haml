.container
  %h3 プロフィールの更新
  = form_for(@user) do |f|
    -# = devise_error_messages!
    .form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, class: 'form-control'
    .form-group
      = f.label 'ユーザー名'
      %br/
      = f.text_field :nickname, autofocus: true, class: 'form-control'
    .form-group
      = f.label 'プロフィール画像'
      %br/
      = f.file_field :avatar
    .form-group
      = f.label "現在のパスワード"
      %br/
      = f.password_field :current_password, autocomplete: "off", class: 'form-control'
    %a.btn.btn-default{ "aria-controls" => "collapse", "aria-expanded" => "false", "data-toggle" => "collapse", :href => "#passCollapse", :role => "button", :style => "margin-bottom: 10px;" }  パスワードの変更
    #passCollapse.collapse
      .form-group
        = f.label "新しいパスワード"
        %br/
        = f.password_field :password, autocomplete: "off", class: 'form-control'
      .form-group
        = f.label "新しいパスワード(確認用)"
        %br/
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'
    .action
      = f.submit "プロフィールを更新", class: 'btn btn-primary'
  %p
    = button_to "退会する", registration_path(@user), data: { confirm: "一度退会されたプロフィール、カード、位置情報は全て削除されます。\nそれでもよろしいですか？" }, method: :delete, class: 'btn btn-danger'
