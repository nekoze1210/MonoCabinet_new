        %ul.dropdown-menu
          %li= link_to 'マイページ', user_path(current_user)
          %li= link_to 'アイテム一覧', user_items_path(current_user)
          %li= link_to 'チュートリアル', help_path
          %li.divider
          %li= link_to 'プロフィールの変更', edit_user_path(current_user)
          %li= link_to 'サインアウト', destroy_user_session_path, method: :delete
      = link_to 'MonoCabinet', root_path, class: 'navbar-brand'
      = link_to content_tag(:i, nil, class: 'fa fa-search', id: '#js-search-items'), '', class: 'navbar-brand', data: { toggle: 'modal', target: '#search-modal' } if controller.controller_name == 'items' && action_name == 'index'
